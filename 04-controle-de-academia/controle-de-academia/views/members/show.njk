{% extends "layout.njk" %}

{% block content %}
    <div class="card">
        <section class="avatar" style="background: url({{ member.avatar_url }}) no-repeat  center center / cover"></section>
        <section class="details">
            <h3>Detalhes</h3>

            <div class="items">
                <div>Membro</div>
                <div>{{ member.name }}</div>
            </div>

            <div class="items">
                <div>Email</div>
                <div>{{ member.email }}</div>
            </div>

            <div class="items">
                <div>Aniversário</div>
                <div>{{ member.birth }}</div>
            </div>

            <div class="items">
                <div>Sexo</div>
                <div>{{ "Masculino" if member.gender === "M" else "Feminino" }}</div>
            </div>

            <div class="items">
                <div>Tipo sanguíneo</div>
                <div>{{ member.blood }}</div>
            </div>

            <div class="items">
                <div>Peso (kg)</div>
                <div>{{ member.weight }}</div>
            </div>

            <div class="items">
                <div>Altura (cm)</div>
                <div>{{ member.height }}</div>
            </div>

            <a href="/members/{{member.id}}/edit" class="button">Editar</a>

        </section>
    </div>
{% endblock content %}