<div class="all-items">
    <div class="items">
        <div>Avatar URL</div>
        <input type="url" name="avatar_url" placeholder="http://" value="{{teacher.avatar_url}}">
    </div>

    <div class="items">
        <div>Nome completo</div>
        <input type="text" name="name" placeholder="Nome do Professor" value="{{teacher.name}}">
    </div>

    <div class="items">
        <div>Data de nascimento</div>
        <input type="date" name="birth" value="{{teacher.birth}}">
    </div>

    <div class="items">
        <div>Grau de escolaridade</div>
        <select name="schooling">
            <option value="medio" {% if teacher.schooling === "medio" %} selected="selected" {% endif %}>Ensino Médio Completo</option>
            <option value="superior" {% if teacher.schooling === "superior" %} selected="selected" {% endif %}>Ensino Superior Completo</option>
            <option value="mestrado" {% if teacher.schooling === "mestrado" %} selected="selected" {% endif %}>Mestrado</option>
            <option value="doutorado" {% if teacher.schooling === "doutorado" %} selected="selected" {% endif %}>Doutorado</option>
        </select>
    </div>

    <div class="items">
        <div>Tipo de aula</div>
        <div>
            <span>
                <input type="radio" name="lesson" value="Presencial" {% if teacher.lesson === "Presencial" %} checked="checked" {% endif %}>Presencial
            </span>
            <span>
                <input type="radio" name="lesson" value="À distância" {% if teacher.lesson === "À distância" %} checked="checked" {% endif %}>À distância
            </span>
        </div>

    </div>

    <div class="items">
        <div>Área de atuação</div>
        <div>
            <input type="text" name="services" placeholder="Separe os serviços prestados por vírgula" value="{{teacher.services}}">
        </div>
    </div>
</div>