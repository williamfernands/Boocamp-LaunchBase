{% extends "layout.njk" %}

{% block content %}
    <div class="card">
        <section class="image" style="background: url({{teacher.avatar_url}}) no-repeat center center / cover"></section>

        <section class="details">
            <h3>Detalhes</h3>

            <div class="all-items">
                <div class="items">
                    <div>Professor</div>
                    <div>{{teacher.name}}</div>
                </div>

                <div class="items">
                    <div>Idade</div>
                    <div>{{teacher.age}}</div>
                </div>

                <div class="items">
                    <div>Grau de escolaridade</div>
                    <div>{{teacher.schooling}}</div>
                </div>

                <div class="items">
                    <div>Aula</div>
                    <div>{{teacher.lesson}}</div>
                </div>

                <div class="items">
                    <div>Acompanhamento</div>
                    <div>
                        {% for service in teacher.services %}
                            <span>{{service}}</span>
                        {% endfor %}
                    </div>
                </div>

                <div class="items">
                    <div class="since">Desde</div>
                    <div class="since">{{teacher.created_at}}</div>
                </div>
            </div>

            <a href="/teachers/{{teacher.id}}/edit" class="button">Editar</a>
        </section>
    </div>
{% endblock content %}